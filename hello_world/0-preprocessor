#!/bin/bash

# Ensure CFILE variable is set
if [ -z "$CFILE" ]; then
    echo "Error: CFILE variable is not set."
    exit 1
fi

# Run the C file through the preprocessor and save output to 'c'
gcc -E "$CFILE" -o c

# Check if the preprocessing was successful
if [ $? -eq 0 ]; then
    echo "Preprocessing completed successfully. Output saved in 'c'."
else
    echo "Preprocessing failed."
    exit 1
fi

